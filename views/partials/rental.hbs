<div class="rent-card col-12 col-md-6 col-lg-4">
    <div class="rent-card-img">
        <img class="rent-img img-fluid" src="/images/{{imageUrl}}" alt="Rental Property">
        <button class="rent-save" type="button">
            <span class="material-symbols-outlined heart">favorite</span>
            <span class="save">Save</span>
        </button>
    </div>
    <div class="rent-card-info">
        <h6 class="rent-card-title text-truncate">{{headline}}</h6>
        <span class="rent-bed-info">Sleeps {{numSleeps}} | {{numBedrooms}} BR | {{numBathrooms}} BA</span>
        <span class="rent-rating"><span class="rating-stars">{{rating}}</span>({{reviews}})</span>
        <span class="rent-price"><span class="cost">CA${{pricePerNight}}</span> avg/night</span>
    </div>
</div>


<script>

    window.onload = (event) => {
        let starRatings = document.getElementsByClassName("rating-stars");
        for (let i = 0; i < starRatings.length; i++) {
            let stars = parseFloat(starRatings[i].innerText);
            starRatings[i].innerText = "";
            for (let j = 0; j < Math.floor(stars); j++) {
                starRatings[i].innerHTML += `<i class="fa fa-star"></i>`;
            }
            if (stars % 1 != 0) {
                stars = stars % 1;
                if (stars >= 0.3 && stars <= 0.701) {
                    starRatings[i].innerHTML += `<i class="fa fa-star-half"></i>`
                } else if (stars >= 0.701) {
                    starRatings[i].innerHTML += `<i class="fa fa-star"></i>`;
                }
            }
        }
    };
</script>